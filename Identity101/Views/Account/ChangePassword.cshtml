@using Identity101.ViewModels
@model ChangePasswordViewModel;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Change Password</title>
</head>
<body>
    <div>
        <h2>@ViewBag.Message</h2>
        <form asp-controller="Account" asp-action="ChangePassword">
           <div asp-validation-summary="ModelOnly"></div>>
            <label asp-for="EskiPassword"></label>
            <input asp-for="EskiPassword" />
            <span asp-validation-for="EskiPassword"></span><br />
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" />
            <span asp-validation-for="NewPassword"></span><br />
            <label asp-for="ConfirmNewPassword"></label>
            <input asp-for="ConfirmNewPassword" />
            <span asp-validation-for="ConfirmNewPassword"></span><br />
            <input type="submit" value="Değiştir" />
        </form>
    </div>
</body>
</html>